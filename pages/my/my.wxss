/* pages/my/my.wxss */
page{
  background:   #f8f8f8;
}
.user{
  width: 100%;
  height: 300rpx;
  background: #1f85d7;
  box-sizing: border-box;
  padding: 50rpx;
  margin-bottom: 20rpx;
}
.user-head{
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  background: #fff;
  float: left;
}
.user-msg{
 float: left;
 width: 300rpx;
 height: 150rpx;
 margin-left: 50rpx;
}
.user-name,.user-tel{
  width: 100%;
  height: 50%;
  font-size: 36rpx;
  color: #fff;
  line-height: 70rpx;
}
.binding{
  width:100rpx;
  height: 100%;
  float: right;
  box-sizing: border-box;
  padding-top: 40rpx;
  padding-left: 40rpx;
}
.binding-icon{
  width: 60rpx;
  height: 60rpx;

}
.binding-icon image{
  width: 100%;
  height: 100%;
}

.list{
  width: 95%;
  height: 100rpx;
  margin: 10rpx auto;
  background: #fff;
  border-radius: 10rpx;
}
.list-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 80rpx;
  float: left;
}
.list-icon image{
  width: 100%;
  height: 100%;
}
.list-text{
  float: left;
  width: 200rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 40rpx;
}
.list-binding{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-right: 40rpx;
  float:right;
}
.list-binding image{
  width: 100%;
  height: 100%;
}
.zixun{
  width: 300rpx;
  height: 40rpx;
  font-size: 30rpx;
  color:#1f85d7;
  margin-top: 30rpx;
  text-align: center;
  line-height: 40rpx;
  float:right;
}