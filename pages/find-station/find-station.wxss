/* pages/find-station/find-station.wxss */
page{
  padding-top: 88rpx;
}
.search-box{
  width: 100%;
  height: 88rpx;
  background: #f0f0f0;
  padding-top: 10rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
  position: fixed;
  top: 0;
  left:0;
}
.search-box input{
  width: 95%;
  height: 70rpx;
  margin: 0 auto;
  padding-left: 100rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 70rpx;
  background: #fff;
  border-radius: 10rpx;
}
.search-icon{
  width:50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  left:45rpx;
  
 }
 .search-icon image{
   width: 100%;
   height: 100%;
 }
 .history-box{
   width: 100%;
   height: 160rpx;
   
 }
 .history-text{
   width: 100%;
   height: 60rpx;
   background: #ddd;
   font-size: 24rpx;
   line-height: 60rpx;
   box-sizing: border-box;
   padding-left: 24rpx;
   color: #fff;
 }
 .history-cityList{
   width: 100%;
   height: 100rpx;
   font-size: 28rpx;
    box-sizing: border-box;
   padding-left: 24rpx;
   padding-top: 10rpx;
 }
 .history-city{
   width: 120rpx;
   height: 60rpx;
   text-align: center;
   line-height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  float: left;
  margin-right: 30rpx;
 }
 .now{
   color: #1f85d7;
   border-color: #1f85d7;
 }

 .city-list{
   width: 100%;
   box-sizing: border-box;
   border-top: 6rpx solid #ddd;
   padding-left: 24px;
 }
 .city{
   width: 100%;
   height: 80rpx;
   border-bottom: 2rpx dotted #ddd;
   font-size: 32rpx;
   line-height: 80rpx;
 }