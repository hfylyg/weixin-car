/* pages/index/index.wxss */
page{
  background:#6cb9f7;
}
#block{
width: 720rpx;
height: 420rpx;
margin: 200rpx auto;
background: #fff;
border-radius: 30rpx;
padding: 20rpx 40rpx;
box-sizing: border-box;
}
.select{
  width: 100%;
  height: 100rpx;
  
}
.select-left{
  width: 200rpx;
  height: 100%;
  font-size: 36rpx;
  text-align: left;
  line-height: 100rpx;
  border-bottom: 1rpx solid #dddddd;
  float: left;
}
.select-right{
  width: 200rpx;
  height: 100%;
  font-size: 36rpx;
  text-align: right;
  line-height: 100rpx;
  border-bottom: 1rpx solid #dddddd;
  float: right;
}
.tran{
  width: 60rpx;
  height: 60rpx;
  float: left;
 
  margin:20rpx 90rpx;
}
.tran image{
  width:100%;
  height:100%;
}

.time{
  width: 100%;
  height: 100rpx;
  margin-top:20rpx;
  border-bottom:1rpx solid #dddddd;
  font-size: 36rpx;
  line-height: 100rpx;
}
.date{
  float:left;
}
.week{
  float: right;
}
.seach{
width: 100%;
height:80rpx;
margin-top:50rpx;
background: #ff8400;
font-size: 36rpx;
color:#fff;
text-align: center;
line-height: 80rpx;
border-radius: 20rpx; 
}

